{% extends 'base.html.twig' %}

{% block title %}Postulation index{% endblock %}

{% block body %}
    <h1>Postulation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdPos</th>
                <th>Email</th>
                <th>Date_pos</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for postulation in postulations %}
            <tr>
                <td>{{ postulation.idPos }}</td>
                <td>{{ postulation.email }}</td>
                <td>{{ postulation.datePos ? postulation.datePos|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_pc_show', {'idPos': postulation.idPos}) }}">show</a>
                    <a href="{{ path('app_pc_edit', {'idPos': postulation.idPos}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pc_new') }}">Create new</a>
{% endblock %}
