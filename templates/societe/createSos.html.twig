{% extends 'base.html.twig' %}
{% block body %}
<div class="row">
<div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

	<div class="card">
		<div class="card-body">
			<h5 class="card-title">Add Societe</h5>

			<!-- General Form Elements -->
			{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
				<label for="inputText" class="col-sm-4 col-form-label">adresse</label>
				<div class="col-sm-10">
					{{ form_widget(form.adresse,{'attr':{'class':'form-control'}}) }}
					{{ form_errors(form.adresse,{'attr':{'class':'text-danger'}}) }}

				</div>
			
			<label for="inputText" class="col-sm-4 col-form-label">email</label>
			<div class="col-sm-10">
				{{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
				{{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}

			</div>


			<label for="inputText" class="col-sm-4 col-form-label">tel</label>
				<div class="col-sm-10">
					{{ form_widget(form.tel,{'attr':{'class':'form-control'}}) }}
					{{ form_errors(form.tel,{'attr':{'class':'text-danger'}}) }}

			</div>
		   

			<label for="inputText" class="col-sm-4 col-form-label">domaine</label>
				<div class="col-sm-10">
					{{ form_widget(form.domaine,{'attr':{'class':'form-control'}}) }}
					{{ form_errors(form.domaine,{'attr':{'class':'text-danger'}}) }}
				</div>


			<label for="inputText" class="col-sm-4 col-form-label">sosImage</label>
			<div class="col-sm-10">
				{{ form_widget(form.sosImage,{'attr':{'class':'form-control'}}) }}
				{{ form_errors(form.sosImage,{'attr':{'class':'text-danger'}}) }}

			</div>
		  

		<button type="add" class="btn btn-primary">Add</button>

			

			{{ form_end(form) }}

		</div>
	</div>

</div>

</div>


{% endblock %} 


