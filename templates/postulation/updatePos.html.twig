



{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Update Postulation</h5>

                    <!-- General Form Elements -->
                    {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                        <label for="inputText" class="col-sm-4 col-form-label">date</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.date_pos,{'attr':{'class':'form-control'}}) }}

                        </div>
                    {{ form_errors(form.date_pos,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-4 col-form-label">Prenom</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.simpleUser,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(form.simpleUser,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">email</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}

                <button type="add" class="btn btn-primary">Update</button>
        
                    

                    {{ form_end(form) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %} 