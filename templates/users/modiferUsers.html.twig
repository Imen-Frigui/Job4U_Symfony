{# {# <h1> Modifer User </h1>
{{form(users)}} #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Update User</h5>

                    <!-- General Form Elements -->
                    {{ form_start(users,{attr:{novalidate:'novalidate'}}) }}
                        <label for="inputText" class="col-sm-4 col-form-label">Nom</label>
                        <div class="col-sm-10">
                            {{ form_widget(users.Nom,{'attr':{'class':'form-control'}}) }}

                        </div>
                    {{ form_errors(users.Nom,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-4 col-form-label">Prenom</label>
                        <div class="col-sm-10">
                            {{ form_widget(users.Prenom,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(users.Prenom,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-10">
                            {{ form_widget(users.Mail,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(users.Mail,{'attr':{'class':'text-danger'}}) }}

                    <br/>
                     <label for="inputText" class="col-sm-4 col-form-label">Password</label>
                        <div class="col-sm-10">
                            {{ form_widget(users.Password,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(users.Password,{'attr':{'class':'text-danger'}}) }}

                    <br/>
                     <label for="inputText" class="col-sm-4 col-form-label">Role</label>
                        <div class="col-sm-10">
                            {{ form_widget(users.Role,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(users.Role,{'attr':{'class':'text-danger'}}) }}

                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(users.Modifier,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(users) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %} 